{
  "manifest_version": 2,
  "name": "bryanyuan2-hackday-basic-chrome-ext",
  "description": "bryanyuan2-hackday-basic-chrome-ext",
  "version": "0.1",
  "icons": {
      "128": "icons/icon128x128.png",
      "48": "icons/icon48x48.png",
      "16": "icons/icon16x16.png"
  },
  "permissions": [
    "storage", 
    "tabs",
    "https://distribution-xml.booking.com/json/*"
  ],
  "background": {
    "scripts": [
      "scripts/jquery-2.0.0.min.js",
      "scripts/jquery.min.map",
      "scripts/lib/jquery.blurr.min.js"
    ]
  },
  "content_scripts": [{
      "all_frames": true,
      "js": [
        "scripts/jquery-2.0.0.min.js",
        "scripts/jquery.min.map",
        "scripts/lib.js",
        "scripts/lib/jquery.blurr.min.js",
        "scripts/contentscript.js"
      ],
      "css": [
        "styles/yhack.css",
        "styles/pktable.css",
        "styles/font-awesome/css/font-awesome.css"
      ],
      "matches": [
        "*://www.booking.com/*"
      ]
   }],
  "web_accessible_resources": [
      "scripts/jquery.min.map",
      "images/yahoo.png",
      "styles/font-awesome/fonts/*.eot",
      "styles/font-awesome/fonts/*.svg",
      "styles/font-awesome/fonts/*.ttf",
      "styles/font-awesome/fonts/*.woff",
      "styles/font-awesome/fonts/*.woff2",
      "styles/*",
      "*.ttf",
      "*.svg"
  ],

  "browser_action": {
      "default_icon": "icons/icon48x48.png"
  }
}
